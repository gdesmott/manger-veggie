-extends "base.haml"

-load leaflet_tags
-load jstemplate

-block bootstrap3_title
  {{ APP_NAME }}

-block head
  -leaflet_js
  -leaflet_css
  %script{src:"{{ STATIC_URL }}js/mustache.js"}
  %script{src:"{{ STATIC_URL }}js/map.js"}

  :css
    .leaflet-container {
        width:  100%;
        height: 100%;
    }

    body {
        padding-top: 51px; /*for navbar*/
    }

    .resto-description {
      position: absolute;
      bottom: 0;
      background-color: rgba(0, 0, 0, .8);
      padding: 20px;
      width: 100%;
      height: 66%;
      color: white;
    }


-block bootstrap3_content
  -include "welcome.haml"
  -include "navbar.haml"
  -mustachejs "restopopup"


  -leaflet_map "map" callback="window.map_init"

  .resto-description
    %h3 Resto title pouet pouet
    %hr

    %p
      Ceci est du contenu sans intérêt
