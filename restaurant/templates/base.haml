    %link{href: "/static/img/favicon.png", rel: "shortcut icon"}
  {% endif %}

  %link{href: "/static/img/logo-highicon.png", rel: "shortcut icon", size: "192x192"}
  %meta{name: "mobile-web-app-capable", content: "yes"}

  %link{href: "/static/css/styles.css", rel: "stylesheet"}
  {% if VEGO_RESTO %}
    %link{href: "/static/css/vegoresto/styles.css", rel: "stylesheet"}
  {% endif %}

  -block head
